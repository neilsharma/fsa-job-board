---
import Navigation from '../components/Navigation.astro'
import { SkipLink } from 'accessible-astro-components'

/**
 * Header Component
 *
 * @description A component that displays the header of the website
 */

interface Props {
  variant?: 'default' | 'jobDetail'
}

const { variant = 'default' } = Astro.props
---

<header>
  <SkipLink />
  {variant === 'default' ? (
    <Navigation>
      <li class="menu-item">
        <a href={`${import.meta.env.BASE_URL}/#open-positions`} class="button-link">Careers</a>
      </li>
    </Navigation>
  ) : (
    <div class="job-detail-nav">
      <div class="container">
        <a href={`${import.meta.env.BASE_URL}/#open-positions`} class="back-link">
          ‚Üê Back to Careers
        </a>
      </div>
    </div>
  )}
</header>

<style>
  .button-link {
    display: inline-block;
    background-color: white;
    color: black;
    border: 2px solid black;
    padding: 0.5rem 0.875rem;
    border-radius: 0.375rem;
    font-size: 0.75rem;
    font-weight: 500;
    text-decoration: none !important;
    transition: opacity 0.2s ease;
    white-space: nowrap;
  }

  .button-link:hover,
  .button-link:focus-visible {
    opacity: 0.8;
    text-decoration: none !important;
  }

  @media (min-width: 640px) {
    .button-link {
      padding: 0.625rem 1.5rem;
      border-radius: 0.5rem;
      font-size: 0.9rem;
    }
  }

  .job-detail-nav {
    padding-top: 1.5rem;
    padding-bottom: 1.5rem;
  }

  .job-detail-nav .container {
    max-width: 48rem;
    margin: 0 auto;
    padding-left: 1rem;
    padding-right: 1rem;
  }

  .back-link {
    display: inline-block;
    color: black;
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    transition: opacity 0.2s ease;
  }

  .back-link:hover,
  .back-link:focus-visible {
    opacity: 0.6;
  }

  @media (min-width: 640px) {
    .back-link {
      font-size: 1rem;
    }

    .job-detail-nav .container {
      padding-left: 1.5rem;
      padding-right: 1.5rem;
    }
  }
</style>
